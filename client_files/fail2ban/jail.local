[DEFAULT]
ignoreip = 127.0.0.1/8 10.0.2.2

# Ban for an hour
bantime  = 3600

# These lines combine to ban clients that fail
# to authenticate 6 times within an hour.
findtime = 3600
maxretry = 6

# This backend is needed for Centos
backend = systemd

# email notifications
mta        = sendmail
destemail  = dpneumo@gmail.com
sendername = Fail2BanAlerts
sender      = dpneumo@gmail.com
action     = %(action_mwl)s
